@{
    ViewData["Title"] = "Guessing Game";
}
<h2>Guessing Game</h2>
<h3>Guess a number in between 1 to 100.</h3>
<form id="tempForm" name="tempForm" action="/Home/CheckGuessing" method="get">
    <label>Enter your number</label>
    <input id="inputNumber" type="number" value="inputNum" name="input" placeholder="Enter number" required />
    <input type="submit" name="submit-button" value="Submit" />
</form>

<h2 class="text-success">@ViewBag.Message</h2>

@if (ViewBag.Message == "Congratulations! Your guess is correct.")
{
    <p>Your guess count is: @GuessingGameModel.StoreNums.Count</p>
    <p>Your Inputs are: </p>
        @for (int i = 0; i < GuessingGameModel.StoreNums.Count; i++)
        {
            <p>@GuessingGameModel.StoreNums[i]</p>
        }
    
}

<form id="tempForm" name="tempForm" action="/Home/Reset" method="get">    
    <input type="submit" name="submit-button" value="Reset" />
</form>

